@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1> Product List </h1>
<div class="col-md-12">
    <ul style="list-style-type:none">

        @foreach (var item in Model)
        {
            <li><a href="/?SearchString=@item.Category">@item.Category</a></li>
        }

        <li><a href="Home/Index">All Products</a></li>

    </ul>
</div>



@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px; padding:10px; margin:2px; border:solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>

        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>

    </div>
}
<div class="col-md-12 clearfix">
